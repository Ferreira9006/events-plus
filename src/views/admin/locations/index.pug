extends ../../layouts/admin/main

block content
  div(class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6")

    div
      h1(class="text-3xl font-bold tracking-tight")
        | Gestão de Localizações
      p(class="text-sm text-base-content/60")
        | Todas as localizações do sistema.

    // ACTION BUTTONS
    div(class="flex flex-wrap items-center gap-2")

      a(
        href="/admin/locations/create"
        class="btn btn-primary"
      )
        | Criar nova localização

  div(class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100")
    table(class="table")
      // head
      thead
        tr
          th Address
          th Latitude
          th Longitude
          th Source
          th Created At
          th Updated At
      tbody
        each location in locations
          tr
            td 
              a(class="link" href=`/admin/locations/${location._id}`) #{location.address}
            td #{location.latitude}
            td #{location.longitude}
            td #{location.source}
            td #{location.createdAt.toDateString()}
            td #{location.updatedAt.toDateString()}