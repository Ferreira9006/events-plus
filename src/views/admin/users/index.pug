extends ../../layouts/admin/main

block content

  // HEADER
  div(class="flex items-center justify-between mb-6")
    h1(class="text-3xl font-bold tracking-tight") Gestão de Utilizadores
    p(class="text-sm text-base-content/60")
      | Total: #{users.length}

  // TABLE
  div(class="card bg-base-100 shadow-md border border-base-200")
    div(class="card-body p-0")

      table(class="table table-zebra w-full")
        thead
          tr
            th Nome
            th Email
            th Role
            th(class="text-right") Ações

        tbody
          if users.length === 0
            tr
              td(colspan="4" class="text-center text-base-content/60 py-6")
                | Nenhum utilizador encontrado.
          else
            each user in users
              tr
                td.font-medium #{user.name}
                td.text-sm #{user.email}
                td
                  span(
                    class=`badge ${user.role === "ADMIN" ? "badge-primary" : "badge-outline"}`
                  )
                    | #{user.role}
                td.text-right
                  a(
                    href=`/admin/users/${user._id}`
                    class="btn btn-xs btn-outline"
                  )
                    | Ver
