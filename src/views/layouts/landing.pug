doctype html
html(lang="pt")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title +Eventos | #{title}
    link(rel="stylesheet", href="/css/style.css")
  body(class="bg-slate-100 min-h-screen flex flex-col")

    header(class="bg-white/80 backdrop-blur shadow-sm")
      include ../components/navbar.pug

    main(class="flex-1")
      if success && success.length
          div(class="mb-4 rounded-xl border border-emerald-200 bg-emerald-50 p-4 text-emerald-800")
            each msg in success
              p.text-sm.font-semibold= msg

      if error && error.length
        div(class="mb-4 rounded-xl border border-rose-200 bg-rose-50 p-4 text-rose-800")
          each msg in error
            p.text-sm.font-semibold= msg
            
      block content

    include ../components/footer.pug